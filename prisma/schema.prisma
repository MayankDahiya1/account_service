generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id        String         @id @unique @default(cuid())
  name      String
  email     String         @unique
  password  String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  role      ROLE           @default(BARBER)
  provider  PROVIDER       @default(LOCAL)
  tokens    RefreshToken[]
}

model RefreshToken {
  id            String   @id @unique @default(cuid())
  token         String   @unique
  device        String?
  ip            String?
  expiresAt     DateTime
  Account__fk__ String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  Account       Account  @relation(fields: [Account__fk__], references: [id])
}

enum ROLE {
  BARBER
  CUSTOMER
}

enum PROVIDER {
  LOCAL
  GOOGLE
}
