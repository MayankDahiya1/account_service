generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                   String       @id @default(cuid())
  createdAt            DateTime     @default(now()) @db.Timestamp(6)
  updatedAt            DateTime     @default(now()) @updatedAt @db.Timestamp(6)
  fullName             String?
  ban                  Boolean      @default(false)
  accountType          ACCOUNT_TYPE
  email                String?      @unique
  profilePicture       String?
  createAs             CREATE_AS    @default(ADMIN)
  password             String
  refreshTokens        RefreshToken[]
  @@index([email])
}

model RefreshToken {
  id          String   @id @default(cuid())
  token       String   @unique
  device      String
  ip          String
  expiresAt   DateTime
  createdAt   DateTime @default(now()) @db.Timestamp(6)
  Account__fk__   String
  Account     Account  @relation(fields: [Account__fk__], references: [id], onDelete: Cascade)
}

enum CREATE_AS {
  SUPER_ADMIN
  ADMIN
}

enum ACCOUNT_TYPE {
  ACCOUNT_DEFAULT
  ACCOUNT_ADMIN
}
