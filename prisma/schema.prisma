generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                   String       @id @default(cuid())
  createdAt            DateTime     @default(now()) @db.Timestamp(6)
  updatedAt            DateTime     @default(now()) @updatedAt @db.Timestamp(6)
  fullName             String?
  ban                  Boolean      @default(false)
  accountType          ACCOUNT_TYPE
  email                String?      @unique
  profilePicture       String?
  createAs             CREATE_AS    @default(ADMIN)
  password             String
  phone                String?
  CreatorAccount       Account?     @relation("CreatorAccountRelation", fields: [CreatorAccount__fk__], references: [id])
  CreatorAccount__fk__ String?
  CreatorAccounts      Account[]    @relation("CreatorAccountRelation")

  @@index([phone])
}

model Otp {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now()) @db.Timestamp(6)
  updatedAt DateTime  @default(now()) @updatedAt @db.Timestamp(6)
  otp       String
  phone     String
  expiresAt DateTime
  used      Boolean   @default(false)
  role      CREATE_AS @default(ADMIN)

  @@index([phone])
}

enum CREATE_AS {
  SUPER_ADMIN
  ADMIN
}

enum ACCOUNT_TYPE {
  ACCOUNT_DEFAULT
  ACCOUNT_ADMIN
}
